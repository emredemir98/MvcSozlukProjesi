@model EntityLayer.Concrete.Message
<button class="btn btn-outline-primary ms-1" data-toggle="modal" data-target="#Modal1">
    Message
</button>
@{
    string mail = ViewBag.mail;
  
}

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Hakkımızda Metin Girisi</h2>
            </div>
            <div class="col-md-12">
                @using (Html.BeginForm("PartialMessage", "Message", FormMethod.Post))
                {
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="form-group">
                                @Html.Label("Alıcı Mail")
                                @Html.TextBoxFor(x => x.RecieverMail, new { @Value = mail,  @class = "form-control", @readonly = "true" })
                                @Html.ValidationMessageFor(x => x.RecieverMail)

                            </div>
                            <div class="form-group">
                                @Html.Label("Konu")
                                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Subject)
                            </div>
                            <div class="form-group">
                                @Html.Label("Mesajınız")
                                <textarea  name="MessageContent" class="form-control" style="height: 300px">
                                
                                
                               
                    </textarea>
                            </div>
                            <div class="form-group">
                                <div class="btn btn-default btn-file">
                                    <i class="fas fa-paperclip"></i> Dosya Ekle
                                    <input type="file" name="attachment">
                                </div>
                                <p class="help-block">Max. 32MB</p>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslaklara Kaydet</button>
                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                            </div>
                            <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal Et</button>
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                }
            </div>
        </div>
    </div>
</div>